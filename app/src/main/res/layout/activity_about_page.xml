<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutPage">

    <TextView
        android:id="@+id/title"
        android:layout_width="226dp"
        android:layout_height="51dp"

        android:text="CheckMate"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp"
        android:textStyle="bold"
        app:flow_horizontalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="308dp"
        android:layout_height="568dp"
        android:layout_margin="10dp"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.275">

        <TextView
            android:layout_width="317dp"
            android:layout_height="167dp"
            android:background="@color/colorPrimaryDark"

            android:text="This is an application developed by students of STI College Ortigas-Cainta to satisfy their thesis requirements."
            android:textAlignment="textStart"
            android:textColor="@color/Yellow"
            android:textSize="23sp"/>

        <TextView
            android:layout_width="215dp"
            android:layout_height="110dp"
            android:layout_marginTop="175dp"

            android:text="Thesis Members:"
            android:textAlignment="textStart"
            android:textSize="23sp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:text="Javier, Patrick R.                           Sibal, Jairo               Vargas, Dayzerlyn Daine          Thiarhia, Ramesh Kumar                  Villanueva, Miguel   "
            android:textAlignment="textStart"
            android:textSize="23sp"
            android:textColor="@color/design_default_color_primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="430dp"
            android:background="@color/Yellow"

            android:text="Bachelor of Science in Computer Science"
            android:textSize="23sp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="520dp"
            android:layout_marginEnd="148dp"

            android:text="Credits: Salvador, Gascon T.      Thesis Adviser"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp" />

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>